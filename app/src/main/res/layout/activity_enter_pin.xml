<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/enterPinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xXlarge"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/font_large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pinBox0"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:background="@drawable/circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox1"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox2"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />

            <EditText
                android:id="@+id/pinBox3"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="@dimen/margin_large"
                android:background="@drawable/circle"
                android:editable="false"
                android:focusable="false"
                android:gravity="center"
                android:inputType="textPassword"
                android:text=""
                android:textColor="#000000"
                android:textSize="40sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/statusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_small"
            android:gravity="center|right"
            android:text=""
            android:textColor="@color/colorTextRed"
            android:textSize="@dimen/font_large" />
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"

            android:elevation="2dp"
            android:layout_marginTop="@dimen/margin_xXXlarge"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:weightSum="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="6dip"
                android:text="1"
                android:layout_weight="1"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="2"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="3"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="4"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="5"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="6"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="7"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="8"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />

            <Button
                android:id="@+id/button9"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="9"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/buttonDeleteBack"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:layout_weight="1"
               android:src="@drawable/backspace"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_large" />



            <Button
                android:id="@+id/button0"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="0"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large" />
            <Button
                android:id="@+id/buttonExit"
                android:layout_width="0dip"
                android:layout_height="70dip"
                android:layout_marginLeft="@dimen/margin_medium"
                android:gravity="center"
                android:padding="6dip"
                android:text="."
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/colorLine"
                android:textSize="@dimen/font_large"
                android:visibility="visible" />


        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/margin_min_small"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pinDescTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:src="@drawable/forwardchevron"

            /></LinearLayout>
        </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
